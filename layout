<script>
async function getContent() {
    try {
        //fazendo conexao com API
        const response = await fetch('http://localhost:3000/dogs')
        const data = await response.json()
        //mostrando as informações salvas no banco MongoDB atraves da
        show(data)
    } catch (error) {
        console.log(error)
    }
}
getContent()

function show(users) {
    let nome = ''
    let id = ''
    let i = 0

    while (users.length > i) {
        for (let user of users) {
            id = user._id
       nome = `<td>${user._id}</td>
       <td>${user.nome}</td>
      <td>${user.raca}</td>
      <td>${user.cor}</td>
      <td><a href="./editar.html?${user._id}" class="btn btn-warning">editar</a></td>
      
`
document.querySelector('tbody').innerHTML += nome
            i++
        }
    }
  }

</script>

